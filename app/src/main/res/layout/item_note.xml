<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_for_CardView"
    android:layout_marginStart="@dimen/margin_for_CardView"
    android:layout_marginTop="@dimen/margin_for_CardView"
    android:layout_marginBottom="@dimen/margin_for_CardView"
    tools:backgroundTint="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_for_TextView"
            android:layout_marginStart="@dimen/margin_for_TextView"
            android:layout_marginTop="@dimen/margin_for_TextView"
            tools:text="@string/text2" />

        <TextView
            android:id="@+id/body"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_for_TextView"
            tools:text="@string/text1" />

    </LinearLayout>

</androidx.cardview.widget.CardView>